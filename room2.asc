function hHotspot1_Interact()
{
  if(isLizard)
  {
    player.ChangeRoom(1, 160, 1);
  }
  else
  {
    player.Say("I can't fit through there.");
  }
}

function oMaximus_UseInv()
{
  switch(player.ActiveInventory)
  {
    case iBat:
      player.Say("The bat didn't even scratch the glass!");
      break;
    default:
      break;
  }
}

